<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.hjhjw1991.toolbox" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:process="net.hjhjw1991.toolbox"
        android:theme="@style/AppTheme" >
        <activity
            android:name="net.hjhjw1991.toolbox.ui.Toolbox"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="net.hjhjw1991.settings.SettingsActivity"
            android:label="@string/title_activity_settings" >
            <intent-filter>
                <action android:name="net.hjhjw1991.settings.toolbox.SettingsActivity.ACTION_OPEN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.XingjiabiActivity"
            android:windowSoftInputMode="adjustResize"
            android:launchMode="singleTask"/>
    </application>

</manifest>
